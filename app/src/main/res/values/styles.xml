<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorProgress</item>
    </style>

    <style name="loginTitleButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonswrap">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="logintext">
        <item name="android:color">@color/colorFont</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="LoginEditTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/colorhint</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
    </style>

    <style name="textwithicon">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="loginpagewrap">
        <item name="android:paddingLeft">17sp</item>
        <item name="android:paddingRight">17sp</item>
    </style>

    <style name="RegisPhoneTextLabel">
        <item name="android:paddingTop">0sp</item>
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/colorFont</item>
    </style>

    <style name="LoginPageButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="forgetButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorFont</item>
    </style>

    <style name="getCode">
        <item name="android:textSize">12sp</item>
        <item name="android:colorControlActivated">@color/colorhint</item>
    </style>
    
    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:top">10dp</item>
    </style>

    <style name="getSection">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="navbar_button">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@string/hint_phone</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
