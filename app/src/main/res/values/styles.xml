<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/colorTheme</item>
    </style>

    <style name="LoginPageButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="forgetButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

</resources>
